
<div class="container">
	<div class="row">
	    <div class="col-md-4"></div>
	    <div id = "forgot-password-div" class="col-md-4">

			<h2 style="padding: 5px;">Forgot Password?</h2>

			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			  <%= devise_error_messages! %>

			  <div class="field">
			    <%= f.label :email %><br />
			    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "email@email.com" %>
			  </div>

			  <div class="actions">
			    <%= f.submit "Reset Password", class: "btn btn-default resetPasswordButton" %>
			  </div>
			<% end %>

			<div>
			<%= render "devise/shared/links" %>
			</div>

		</div>
	</div>
</div>